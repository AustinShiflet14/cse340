<% if (title) { %>
<h1><%= title %></h1>
<% } %>

<%- messages() %>
<% if (errors) { %>
<ul class="notice">
    <% errors.array().forEach(error => { %>
    <li><%= error.msg %></li>
    <% }) %>
</ul>
<% } %>

<form action="/inv/add-inventory" method="POST">
    <label for="inv_make">Make:</label>
    <input type="text" id="inv_make" name="inv_make" value="<%= inv_make || '' %>" required>

    <label for="inv_model">Model:</label>
    <input type="text" id="inv_model" name="inv_model" value="<%= inv_model || '' %>" required>

    <label for="inv_year">Year:</label>
    <input type="number" id="inv_year" name="inv_year" value="<%= inv_year || '' %>" required min="1950" max="2030" step="1">

    <label for="inv_price">Price:</label>
    <input type="number" id="inv_price" name="inv_price" value="<%= inv_price || '' %>" required min="0" step="500">

    <label for="classificationList">Classification:</label>
    <%- classificationList %>

    <label for="inv_miles">Mileage:</label>
    <input type="number" id="inv_miles" name="inv_miles" value="<%= inv_miles || '' %>" required min="0" step="1000">

    <label for="inv_description">Description:</label>
    <textarea id="inv_description" name="inv_description"><%= inv_description || '' %></textarea>

    <label for="inv_image">Image Path:</label>
    <input type="text" id="inv_image" name="inv_image" value="<%= inv_image || '/images/no-image.png' %>" required>

    <label for="inv_thumbnail">Thumbnail Path:</label>
    <input type="text" id="inv_thumbnail" name="inv_thumbnail" value="<%= inv_thumbnail || '/images/no-image.png' %>" required>

    <label for="inv_color">Color:</label>
    <input type="text" id="inv_color" name="inv_color" required>


    <button type="submit">Add Vehicle</button>
</form>