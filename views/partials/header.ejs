<header id="top-header">
    <span class="siteName">
        <a href="/" title="Return to Home Page">CSE Motors</a>
    </span>
    <div id="tools">
        <% if (locals.loggedin) { %>
            <!-- Logged-in view -->
            <span>Welcome <%= accountData.account_firstname %></span>
            <a title="Go to Account Management" href="/account/">Account Management</a>
            <a title="Click to Log out" href="/account/logout">Logout</a>
        <% } else { %>
            <!-- Guest view -->
            <a title="Click to Log in" href="/account/login">My Account</a>
        <% } %>
    </div>
</header>
