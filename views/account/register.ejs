<% if (title) { %>
<h1><%= title %></h1>
<% } %>

<section class="account-register">
    <%- messages() %>
    <% if (errors) { %>
        <ul class="notice">
    <% errors.array().forEach(error => { %>
        <li><%= error.msg %></li>
    <%  }) %>
        </ul>
    <% } %>

    <p>All fields are required</p>
    <form id="registerForm" action="/account/register" method="post" class="account-register-form">
        <label for="account_firstname">First Name:</label>
        <input type="text" id="account_firstname" name="account_firstname" required>

        <label for="account_lastname">Last Name:</label>
        <input type="text" id="account_lastname" name="account_lastname" required>

        <label for="account_email">Email:</label>
        <input type="email" id="account_email" name="account_email" required placeholder="Please enter a valid email address">

        <label for="account_password">Password:</label>
        <span>Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character</span>
        <input type="password" id="account_password" name="account_password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
        <span id="pswdBtn">Show Password</span>

        <button type="submit" class="account-register-btn">Register</button>
    </form>


    <p class="account-login-link">
        Already have an account? <a href="/account/login">Login</a>
    </p>
</section>