<% if (title) { %>
<h1><%= title %></h1>
<% } %>

<main class="account-register">
    <%- messages() %>

    <form id="registerForm" action="/account/register" method="post" class="account-register-form">
        <label for="firstName">First Name:</label>
        <input type="text" id="firstName" name="firstName">

        <label for="lastName">Last Name:</label>
        <input type="text" id="lastName" name="lastName">

        <label for="email">Email:</label>
        <input type="email" id="email" name="email">

        <label for="password">Password:</label>
        <input type="password" name="pword" id="pword">
        <span id="pswdBtn">Show Password</span>

        <button type="submit" class="account-register-btn">Register</button>
    </form>

    <p class="account-login-link">
        Already have an account? <a href="/account/login">Login</a>
    </p>
</main>