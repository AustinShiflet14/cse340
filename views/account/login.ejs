<% if (title) { %>
<h1><%= title %></h1>
<% } %>

<main class="account-login">
    <h1 class="account-login-title"><%= title %></h1>

    <%- messages() %>

    <form id="loginForm" action="/account/login" method="post" class="account-login-form">
        <label for="email">Email:</label>
        <input type="email" id="email" name="email">

        <label for="password">Password:</label>
        <input type="password" id="password" name="password">

        <button type="submit" class="account-login-btn">Login</button>
    </form>

    <p class="account-signup-link">
        No account? <a href="/account/register">Sign-up</a>
    </p>
</main>
