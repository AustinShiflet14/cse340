<% if (title) { %>
<h1><%= title %></h1>
<% } %>

<section class="account-update">
    <%- messages() %>

    <% if (errors) { %>
        <ul class="notice">
        <% errors.array().forEach(error => { %>
            <li><%= error.msg %></li>
        <% }) %>
        </ul>
    <% } %>

    <!-- Account Update Form -->
    <form action="/account/update" method="POST">
        <legend>Account Update</legend>

        <label for="account_firstname">First Name:</label>
        <input type="text" name="account_firstname" id="account_firstname" 
            value="<%= accountData.account_firstname %>" required />

        <label for="account_lastname">Last Name:</label>
        <input type="text" name="account_lastname" id="account_lastname" 
            value="<%= accountData.account_lastname %>" required />

        <label for="account_email">Email:</label>
        <input type="email" name="account_email" id="account_email" 
            value="<%= accountData.account_email %>" required />

        <input type="hidden" name="account_id" value="<%= accountData.account_id %>" />

        <button type="submit" class="account-login-btn">Update Account</button>
    </form>

    <!-- Password Change Form -->
    <form action="/account/update-password" method="POST">
        <legend>Change Password</legend>

        <label for="account_password">New Password:</label>
        <input type="password" name="account_password" id="account_password" 
            placeholder="Enter new password" required />
        <p>Password must be at least 8 characters with letters and numbers.</p>
        <span id="pswdBtn">Show Password</span>

        <input type="hidden" name="account_id" value="<%= accountData.account_id %>" />

        <button type="submit" class="account-login-btn">Change Password</button>
    </form>
</section>
